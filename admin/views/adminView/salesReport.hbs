<section class="page-align" id="footer">
    <h1>Sales Report</h1>
    <div class="sale-filter">

        <div>
            {{#if sales}}
    <button id="download-button" class="btn btn-secondary">Download As PDF</button>
    <button type="button" class="btn btn-secondary" onclick="export_data()"
                    value="Export to excel">Download As Excel</button>
    {{/if}}
    </div>
    <div class="mt-3">
        <form action="/admin/sale-filter" method="post">
        <input type="date" name="startDate" id="startDate">
        <input type="date" name="endDate" id="endDate">
        <button class="badge bg-secondary ml-5" type="submit">Filter</button>
        </form>
        </div>
    </div>
    {{#if sales}}
    {{#if dates}}
    <p>Showing Results {{dates.start}} to {{dates.end}}</p>
    {{/if}}
    <div id="invoice">
    <table class="table table-striped">
        <thead>
            <tr>
                <th scope="col">Date</th>
                <th scope="col">User</th>
                <th scope="col">orderId</th>
                <th scope="col">Total</th>
                <th scope="col">Payment Method</th>
                <th scope="col">Status</th>
            </tr>
        </thead>
        <tbody>
            {{#each sales}}
            <tr>
                <td id="date">{{this.deliveredDate}}</td>
                <td>{{this.deleviryDetails.fullName}}</td>
                <td>{{this._id}}</td>
                <td>{{this.totalAmount}}</td>
                <td>{{this.paymentMethod}}</td>
                {{#if returnConfirmed }}
                <td> <span style="color: red; font-weight: bold;">Returned</span> </td>
                    {{else}}
                <td ><span style="color: green; font-weight: bold;"> Delivered</span> </td>
                    {{/if}}
            </tr>
            {{/each}}
        </tbody>
    </table>
    </div>
    {{else}}
    <p class="text-center mt-5">No Records Found</p>
    {{/if}}
</section>
<script src="https://cdnjs.cloudflare.com/ajax/libs/html2pdf.js/0.9.3/html2pdf.bundle.min.js" integrity="sha512-YcsIPGdhPK4P/uRW6/sruonlYj+Q7UHWeKfTAkBW+g83NKM+jMJFJ4iAPfSnVp7BKD4dKMHmVSvICUbE/V1sSw==" crossorigin="anonymous" referrerpolicy="no-referrer"></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/xlsx/0.17.0/xlsx.full.min.js"></script>
<script>
			const button = document.getElementById('download-button');
			function generatePDF() {
                console.log("called")
				// Choose the element that your content will be rendered to.
				const element = document.getElementById('invoice');
				// Choose the element and save the PDF for your user.
				html2pdf().from(element).save();
			}
			button.addEventListener('click', generatePDF);
            
            function export_data() {
        let data = document.getElementById('invoice');
        var fp = XLSX.utils.table_to_book(data, { sheet: 'wisdom' });
        XLSX.write(fp, {
            bookType: 'xlsx',
            type: 'base64'
        });
        XLSX.writeFile(fp, 'report.xlsx');
    }
</script>