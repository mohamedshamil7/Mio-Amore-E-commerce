<section class="page-align mt-5 " id="footer">
    <div class="container" class="mydata">
        <div class="row">



             <!-- Table with stripped rows -->
              <div class="table-responsive">
    <table class="table table-striped table-hover mt-3">
        <thead>
            <tr>
                <th scope="col">Image</th>
                <th scope="col">Product Name</th>
                <th scope="col">Company</th>
                <th scope="col">Price</th>
                <th scope="col">Category</th>
                <th scope="col">Mf Date</th>
                <th scope="col">Stock</th>
                <th scope="col"></th>
                <th scope="col">Availability</th>
                <th scope="col" class="text-center">Action</th>
            </tr>
        </thead>
        <tbody>
            {{#each Details}}
            <tr>
                <th scope="row"><img style="width: 50px;" src="{{this.urlImage1}}" alt="no"></th>
                <td>{{this.ProductName}}</td>
                <td>{{this.Company}}</td>
                <td>{{this.Price}}</td>
                <td>{{this.category}}</td>
                <td>{{this.ManufacturingDate}}</td>
                <td>{{this.Stock}}</td>
                <td>
                    <a href="/admin/addVariations?id={{this._id}}">
                        <button class="btn btn-primary btn-sm">Add Variations</button>
                    </a>
                </td>
                <td>
                    {{#if this.Availability}}
                    <form action="/admin/prodAvailability/{{this._id}}" method="post">
                        <input type="text" name="Availability" value="{{this.Availability}}" hidden>
                        <button type="submit" class="btn btn-outline-danger btn-sm">Unlist</button>
                    </form>
                    {{else}}
                    <form action="/admin/prodAvailability/{{this._id}}" method="post">
                        <input type="text" name="Availability" value="{{this.Availability}}" hidden>
                        <button type="submit" class="btn btn-outline-success btn-sm">List</button>
                    </form>
                    {{/if}}
                </td>
                <td class="text-center">
                    <a href="">
                        <form action="/admin/edit-Product" method="post">
                            <input type="text" name="id" value="{{this._id}}" hidden>
                            <button type="submit" class="btn btn-primary btn-sm">Edit</button>
                        </form>
                    </a>
                </td>
            </tr>
            {{/each}}
        </tbody>
    </table>
</div>

              <!-- End Table with stripped rows -->
        </div>
    </div>
</section>
          