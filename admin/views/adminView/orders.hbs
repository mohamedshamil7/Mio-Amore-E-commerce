<section class="page-align mt-5" id="footer">
    <div class="container">
        <div class="row">
<h1 >Orders</h1>
    {{!-- {{message}} --}}
    <table class="table table-bordered border-primary mt-5" id="orders">
        <thead>
            <tr>
                <th scope="col">User</th>
                <th scope="col">Date</th>
                <th scope="col">Total Price</th>
                <th scope="col">Method</th>
                <th scope="col">Status</th>
                <th>View</th>
            </tr>
        </thead>
        <tbody>
            {{#each orders}}
            <tr>
                <td>{{this.user.username}}</td>
                <td>{{this.date}}</td>
                <td>â‚¹{{this.totalAmount}}</td>
                <td>{{this.paymentMethod}}</td>
                <td>

                    {{#if this.btnStatus}}
                    <p class="badge badge-success" style="color: yellow;">{{this.status}}</p> <br>
                        {{!-- <a href="/admin/cancelOrder/{{this._id}}"> <p class="cancel badge badge-danger" >Cancel Order</p></a> --}}
                         <p onclick="cancelOrder('{{this._id}}')" class="cancel badge badge-danger" >Cancel Order</p>
                        
                        {{else}}
                    <p class="badge badge-secondary">{{this.status}}</p> <br>
                    {{/if}}
                </td>
                
                <td><a href="/admin/view-order-product/{{this._id}}"><button class="btn btn-secondary">ViewProducts</button></a></td>
            </tr>
            {{/each}}
        </tbody>
    </table>
        </div>
    </div>
    


</section>



