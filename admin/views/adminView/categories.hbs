

<section class="page-align mt-5 " id="footer">
    <div class="container" id="mydata">
        <div class="row">
 <form action="/admin/addCategory" method="post">
                <div class="row mb-3 ">
                  <label for="inputText" class="col-sm-2 col-form-label ">Add new Categories :</label>
                  <div class="col-sm-4">
                    <input type="text" name="newCategory" class="form-control">
                  </div>
                </div>
                <span>{{error}}</span>
                            <div class=" mt-3 mb-5">
                <button type="submit" class="btn btn-primary"> Submit </button> 
                  </div>
</form>


<!-- Table with stripped rows -->
              <table class="table table-striped">
                <thead>
                  <tr>

                    <th scope="col">Name</th>
                    <th scope="col">Action</th>
                    {{!-- <th scope="col">Position</th>
                    <th scope="col">Age</th>
                    <th scope="col">Start Date</th> --}}
                  </tr>
                </thead>
                <tbody>
                     {{#each categories}}
                  <tr>

                    <td>{{this.categoryName}}</td>
                    <td>
                        
                      <form action="/admin/deleteCategory" method="post">
                            <input type="text" name="id" value="{{this._id}}" hidden >
                            <button type="submit" class="btn btn-danger" onclick="return confirm(`Are you sure want to delete {{this.categoryName}} 
                    if you delete this category, all the books related to this will be deleted` )">Remove</button>
                            </form>
                    </td>
                  </tr>
                </tbody>
                  {{/each}}
              </table>
              <!-- End Table with stripped rows -->

        </div>
    </div>
    



</section>