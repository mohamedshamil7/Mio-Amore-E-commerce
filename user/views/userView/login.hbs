    <script>

$("#loginEmailForm").submit((e)=>{
    e.preventDefault()
    $.ajax({
        url:"/login-submit",
         data:$('#loginEmailForm').serialize(),
           method:'post',
           success:(response)=>{
            console.log(response)
            if(response.status==true){
                location.href='/home'
            }else if(response.status=="false"){
                document.getElementById("errorMessageLogin").innerHTML = response.errorMessage

            }
           } ,error:(xhr, thrownError)=>{
            let error =  xhr.responseJSON.errors[0].msg
       
        Swal.fire({
            icon: 'error',
            title: 'Server ERROR',
          text: error ,
           
          })
    }
    })
})

    </script>


