                                    </div>
                                  <div class="form-floating theme-form-floating">
                                        <input type="phone" class="form-control"  name="phone" id="otp" oninput="validatePhone()"
                                            placeholder="OTP">
                                        <label for="phone number">Enter OTP</label>
                                         <span style="color: red;" id="otp-error"></span>

                                    {{!-- <div id="recaptcha-container"></div> --}}
                                    </div>
                                   <button class="btn btn-animation w-100 justify-content-center" type="submit"   id="sign-in-button" >submit number</button>

                                </div>
                                <div class="col-12">
                                    <button class="btn btn-animation w-100 justify-content-center" id="sign-in" type="submit">Enter</button>
