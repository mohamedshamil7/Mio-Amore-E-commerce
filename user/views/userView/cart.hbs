<!-- Cart Section Start -->
    <section class="cart-section section-b-space">
        <div class="container-fluid-lg">
            <div class="row g-sm-5 g-3">
                <div class="col-xxl-9">
                                    {{#if products}}
                    <div class="cart-table">
                        <div class="table-responsive-xl">
                            <table class="table">
                                <tbody>
                                    {{#each products}}
                                    {{!-- {{#each this.cart_product}} --}}
                                    <tr class="product-box-contain">
                                        <td class="product-detail">
                                            <div class="product border-0">
                                                <a href="/user/product/{{this.cart_product._id}}" class="product-image">
                                                    <img src="{{this.cart_product.urlImage1}}"
                                                        class="img-fluid blur-up lazyload" alt="">
                                                </a>
                                                <div class="product-detail">
                                                    <ul>
                                                        <li class="name">
                                                            <a href="product-left-thumbnail.html">{{this.cart_product.ProductName}}</a>
                                                        </li>

                                                        <li class="text-content"><span class="text-title">Sold
                                                                By:</span> {{this.cart_product.Company}}</li>
                                                        <li>
                                                                 <h5 class="text-content d-inline-block">Size :</h5> <span>{{this.cart_product.Size}} </span> <br>
                                                                  <h5 class="text-content d-inline-block">Color :</h5> <span>{{this.cart_product.Color}} </span> 
                                                        </li>

                                                            <h5 class="text-content d-inline-block">Price :</h5>

                                                            <span>{{this.cart_product.Price}} </span> <del>{{this.cart_product.MRP}}</del>

                                                           
                                                           
                                                            {{!-- <span class="text-content">$45.68</span> --}}
                                                             {{#if this.cart_product.inStock }}
                                                                 {{else}}
                                                                     <span class="" style="color: red;"> Product is Currently unAvailable</span>
                                            {{!-- <h6 class="theme-color">You Save : $20.68</h6> --}}
                                              {{/if}}
                                          
                                                        
                                                          {{!-- {{/each}} --}}

                                                            {{!-- <li>
                                                                <h5 class="saving theme-color">Saving : $20.68</h5>
                                                            </li> --}}

                                                        <li class="quantity-price-box">
                                                            <div class="cart_qty">
                                                                <div class="input-group">
                                                                    <button type="button" class="btn qty-left-minus"
                                                                        data-type="minus" data-field="">
                                                                        <i class="fa fa-minus ms-0"
                                                                            aria-hidden="true"></i>
                                                                    </button>
                                                                    <input class="form-control input-number qty-input"
                                                                        type="text" name="quantity" value="0">
                                                                    <button type="button" class="btn qty-right-plus"
                                                                        data-type="plus" data-field="">
                                                                        <i class="fa fa-plus ms-0"
                                                                            aria-hidden="true"></i>
                                                                    </button>
                                                                </div>
                                                            </div>
                                                        </li>

                                                        <li>
                                                            {{!-- <h5>Total: ₹ {{this.cart_product.Price}}</h5> --}}
                                                        </li>
                                                    </ul>
                                                </div>
                                            </div>

                                        </td>

                                        <td class="price">
                                            <h4 class="table-title text-content">Price</h4>
                                            {{#if this.cart_product.offer }}
                                            <h5> ₹ {{this.cart_product.Price}} <del class="text-content">{{this.cart_product.MRP}}</del></h5>
                                           {{else}}
                                            <h5> ₹ {{this.cart_product.Price}} </h5>
                                            {{/if}}
                                            {{!-- <h6 class="theme-color">You Save : $20.68</h6> --}}
                                        </td>
                                          {{!-- {{/each}} --}}

                                        <td class="quantity">
                                          {{#if this.cart_product.inStock}}
                                            <h4 class="table-title text-content">Qty</h4>
                                            <div class="quantity-price">
                                                <div class="cart_qty">
                                                    <div class="input-group">

                                                        <button type="button" class="btn qty-left-minus"
                                                            data-type="minus" data-field="" onclick="quantityChange('{{this._id}}','{{this.cart_product._id}}',-1,'{{this.quantity}}','{{this.varientId}}')">
                                                            <i class="fa fa-minus ms-0" aria-hidden="true"></i>
                                                        </button>
                                                        <input class="form-control input-number qty-input" type="text"
                                                            name="quantity" id="{{this.cart_product._id}}" value={{this.quantity}}>
                                                        <button type="button" class="btn qty-right-plus"
                                                            data-type="plus" data-field="" onclick="quantityChange('{{this._id}}','{{this.cart_product._id}}',1,'{{this.quantity}}','{{this.varientId}}')">
                                                            <i class="fa fa-plus ms-0" aria-hidden="true"></i>
                                                        </button>
                                                    </div>
                                                </div>
                                            </div>
                                                {{/if}}
                                        </td>


                                            {{!-- <td class="subtotal">
                                                <h4 class="table-title text-content">Total</h4>
                                                <h5>$35.10</h5>
                                            </td> --}}
                                               

                                        <td class="save-remove">
                                            <h4 class="table-title text-content">Action</h4>
                                          <form action="">
                                            
                                          </form>  {{!-- <a class="save notifi-wishlist" href="javascript:void(0)">Save for later</a> --}}
                                            {{!-- <a class="remove " onclick="return confirm(`Are you sure want to delete {{this.cart_product.ProductName}}  from your cart ?` )" href="/user/removeCart/{{this.cart_product._id}}">Remove</a> --}}
                                            <button type="button" class="btn btn-danger" onclick="removeFromCart('{{this.cart_product._id}}')"> Remove</button>
                                        </td>
                                    </tr>

                                   

                                   {{/each}}

                                </tbody>
                            </table>
                        </div>
                    </div>


                                   {{else}}
                <img style="margin-left:5% ;" src="http://localhost:8001/user/images/112087-empty.gif" alt="">
                                   {{/if}}
                </div>
                {{#if products}}
                <div class="col-xxl-3">
                    <div class="summery-box p-sticky">
                        <div class="summery-header">
                            <h3>Cart Total</h3>
                        </div>

                        {{!-- <div class="summery-contain">
                            <div class="coupon-cart">
                                <h6 class="text-content mb-2">Coupon Apply</h6>
                                <div class="mb-3 coupon-box input-group">
                                    <input type="email" class="form-control" id="exampleFormControlInput1"
                                        placeholder="Enter Coupon Code Here...">
                                    <button class="btn-apply">Apply</button>
                                </div>
                            </div>
                            <ul>
                                <li>
                                    <h4>Subtotal</h4>
                                    <h4 class="price">$125.65</h4>
                                </li>

                                <li>
                                    <h4>Coupon Discount</h4>
                                    <h4 class="price">(-) 0.00</h4>
                                </li>

                                <li class="align-items-start">
                                    <h4>Shipping</h4>
                                    <h4 class="price text-end">$6.90</h4>
                                </li>
                            </ul>
                        </div> --}}

                        <ul class="summery-total">
                            <li class="list-total border-top-0">
                                <h4>Total (INR)</h4>
                                <h4 class="price theme-color"> ₹{{total}}</h4>
                            </li>
                        </ul>

                        <div class="button-group cart-button">
                            <ul>
                            {{!-- {{#if this.cart_product.Availability }} --}}
                            {{#if outofStock}}
                                 <li>
                                    <button 
                                        class="btn btn-animation proceed-btn fw-bold">Some Products Unavailable</button>
                                </li>
                                {{else}}
                                <li>
                                    <button onclick="location.href = '/user/checkout';"
                                        class="btn btn-animation proceed-btn fw-bold">Process To Checkout</button>
                                </li>


                                {{/if}}

                            

                                <li>
                                    <button onclick="location.href = '/user/home'"
                                        class="btn btn-light shopping-button text-dark">
                                        <i class="fa-solid fa-arrow-left-long"></i>Return To Shopping</button>
                                </li>
                                
                                     
                                {{!-- </li> --}}
                            </ul>
                        </div>
                    </div>
                     <div class="mt-5  ">
                            <div class="category-menu p-3  p-sticky">
                                <h3>Available coupens</h3>

                                <ul class="product-list product-right-sidebar border-0 p-0">
                                    {{#each normalCoupens}}
                                    <li>
                                        <div class="offer-product">
                                            <div class="offer-detail">
                                                <div>
                                                    <h6 class="price theme-color"> {{this.name}}</h6>
                                                    <h6 class="price theme-color">use the code : {{this.code}}</h6>
                                                    </a>
                                                    {{#if this.percentage}}
                                                    <span>{{this.percentage}}% off !!!</span>
                                                    {{else}}
                                                    <span>flat {{this.amount}} rupees off !!!</span>
                                                    {{/if}}
                                                        <h6 class="name">* minimum Purchase of rupees :{{this.minLimit}}</h6>
                                                </div>
                                            </div>
                                        </div>
                                    </li>
                                    
                                    {{/each}}
                                </ul>
                            </div>
                        </div>
                </div>
                {{/if}}
            </div>
        </div>
    </section>
    <!-- Cart Section End -->